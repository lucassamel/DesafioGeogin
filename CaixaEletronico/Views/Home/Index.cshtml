@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Caixa Eletrônico</h1>    

    <div class="d-block">
        <div class="card border-dark mb-3" style="max-width: 25rem;">
            <div class="card-header">Notas disponíveis</div>
            <div class="card-body text-dark">
                <p class="card-text">- 10 notas de R$10,00;</p>
                <p class="card-text">- 10 notas de R$20,00;</p>
                <p class="card-text">- 10 notas de R$50,00;</p>
                <p class="card-text">- 10 notas de R$100,00;</p>
                <p class="card-text">- 10 notas de R$200,00;</p>
            </div>
        </div>

        
    </div>
    <div class="text-center">
        <h4>Digite o Valor Desejado para Saque:</h4>
    </div>
    
   <form> 
      <div class="form-row align-content-center">    
        <div class="col-md-3 mb-3">               
          <input type="number" class="form-control" id="valorSaque" required>
          <div class="invalid-feedback">
            
          </div>
        </div>
      </div>  
      <button id="sacar" class="btn btn-primary" type="submit">Sacar!</button>
   </form>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            carregarDados();
            
            eventos();
        });

        function carregarDados(){            
            $.ajax({
                type:"GET",
                url: "@Url.Action("GetCaixaEletronico")",
                dataType: "json",               
                success: function (result) {                                   

                    console.log(result);
                },
                error: function (req, status, error) {
                    console.log(status);
                }
            });
        }

        function realizarSaque(valorSaque){
            $.ajax({
                type: "POST",
                url: "@Url.Action("PostCaixaEletronico")",
                dataType: "json",
                data: {saque: valorSaque},
                success: function (result) {
                    console.log(result);
                },
                error: function (req, status, error) {
                    console.log(status);
                }
            });
        }

        function eventos(){
            $("#sacar").on("click", (e) => {
                realizarSaque($("#valorSaque").val())
                console.log($("#valorSaque").val())
            });
        }
    </script>
}
